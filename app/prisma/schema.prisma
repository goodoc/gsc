
  generator client {
    provider = "prisma-client-js"
  }
  
  datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
  }
  
  model User {
    id Int @id @default(autoincrement())
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
    deletedAt  DateTime?
    username String
    password String
    posts Post[]
  }
  
  model Post {
    id Int @id @default(autoincrement())
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
    deletedAt  DateTime?
    title String
    content String
    writer User @relation(fields: [userId], references: [id])
    userId Int
  }
